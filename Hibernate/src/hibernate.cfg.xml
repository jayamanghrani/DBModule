<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
        
  <hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.username">myhibernatebatch</property>
        <property name="hibernate.connection.password">mystudents</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@//Jaya:1521/XE</property>
        <property name="show_sql">true</property>
        <mapping resource="Employee.hbm.xml"/>       
    </session-factory>
</hibernate-configuration>      